<openerp>
	<data>
<!--		LANDSCAPE VIEW CODE-->
		<record id="report_paperformat" model="report.paperformat">
			<field name="name">Landscape</field>
			<field name="default" eval="True" />
			<field name="format">A4</field>
			<field name="orientation">Landscape</field>
			<field name="margin_top">20</field>
			<field name="margin_bottom">0</field>
			<field name="margin_left">15</field>
			<field name="margin_right">15</field>
			<field name="header_line" eval="False" />
			<field name="header_spacing">25</field>
			<field name="dpi">0</field>
		</record>

        <record model="ir.ui.view" id="customer_invoice_report_wizard_id">
			<field name="name">customer.invoice.report</field>
			<field name="model">customer.invoice.report</field>
			<field name="arch" type="xml">
				<form string="Customer Invoice Report">
					<group col="4">
						<field name="date_from" required="1"/>
						<field name="date_to" required="1"/>
					</group>

					<group col="4">
                        <field name="partner_id" domain="[('customer','=',True)]"/>
                        <field name="product"/>
                    </group>
					<group col="4">
						<field name="potency"/>
						<field name="group"/>

					</group>
					<group col="4">
						<field name="company"/>
						<field name="packing"/>
					</group>



					<footer>
						<button name="action_customer_invoice_open_window" type="object" string="Print" class="oe_highlight" />
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
		<report id="report_medical_customer_invoices_id" string="Customer Invoice Report"
			model="customer.invoice.report" report_type="qweb-pdf"
			name="pharmacy_mgmnt.report_customer_invoice_template_new"/>
		<record id="pharmacy_mgmnt.report_medical_customer_invoices_id" model="ir.actions.report.xml">
			<field name="paperformat_id" ref="report_paperformat"/>
		</record>

<!--		..................TEMPLATE VIEW........................................................-->

		<template id="report_customer_invoice_template_new">

	     <style>
table, th, td {

  border-collapse: collapse;

}
th, td {
  padding: 17px;
  text-align: left;
}
</style>

			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="report.external_layout">
						<div class="page">

							<center><b><h1>Customer Invoice Report</h1></b></center><br/>

	<span><center><b><h4> <span t-field="o.date_from"/> To <span t-field="o.date_to"/></h4></b></center></span>
							<t t-set="sl_no" t-value="1" />
							<t t-set="subtotal" t-value="0" />

							<div>
								<center>

									<table class="table table-bordered">
										<thead>

											<tr>
												<td style="width: 4%;" align="center"><h4><b><center>S# No</center></b></h4></td>
												<td style="width: 10%;" align="center"><h4><b><center>Date</center></b></h4></td>
												<td style="width: 10%;" align="center"><h4><b><center>Customer</center></b></h4></td>
												<td style="width: 10%;" align="center"><h4><b><center>Medicine</center></b></h4></td>
												<td style="width: 10%;" align="center"><h4><b><center>Potency</center></b></h4></td>
												<td style="width: 10%;" align="center"><h4><b><center>Group</center></b></h4></td>
												<td style="width: 10%;" align="center"><h4><b><center>Company</center></b></h4></td>
												<td style="width: 10%;" align="center"><h4><b><center>Packing</center></b></h4></td>
												<td style="width: 10%;" align="center"><h4><b><center>Manf:Date</center></b></h4></td>
												<td style="width: 10%; " align="center"><h4><b><center>Expiry:Date</center></b></h4></td>
												<td style="width: 10%; " align="center"><h4><b><center>Amount</center></b></h4></td>

											</tr>
										</thead>
										<tbody>
												<t t-set="test_variable4" t-value="0"/>
									             <p t-foreach="docs.get_details()" t-as="line">
										         <t t-set="test_variable4" t-value="line['total_amt']"/>
									             </p>
											<t t-foreach="docs.get_details()" t-as="line">
												<tr >
													<td >
														<center><span t-esc="sl_no" />
															<t t-set="sl_no" t-value="sl_no+1" /></center>
													</td>
													<td>
														<center><span t-esc="line['date']"/></center>
													</td>
													<td>
														<center><span t-esc="line['customer']"/></center>
													</td>
													<td>
														<center><span t-esc="line['medicine']"/></center>
													</td>
													<td>
														<center><span t-esc="line['potency']"/></center>
													</td>
													<td>
														<center><span t-esc="line['group']"/></center>
													</td>
													<td>
														<center><span t-esc="line['company']"/></center>
													</td>
													<td>
														<center><span t-esc="line['packing']"/></center>
													</td>
													<td>
														<center><span t-esc="line['exp']"/></center>
													</td>
													<td>
														<center><span t-esc="line['mfd']"/></center>
													</td>
													<td>
														<center><span t-esc="line['amount']"/></center>
													</td>

												</tr>
											</t>
											<tr>
												<td colspan="10" style="width: 10%;" align="center"><center><h5><b>Grand Total</b></h5></center></td>
												<td><b><center><span t-esc="test_variable4"/></center></b></td>
											</tr>

										</tbody>
									</table>
								</center>
							</div>
						</div>
					</t>
				</t>
			</t>
</template>





<!--	.....MENUS AND ACTIONS..............................................................................-->

		<record id="action_customer_invoice_report" model="ir.actions.act_window">
					<field name="name">Print Customer Invoice Report</field>
					<field name="type">ir.actions.act_window</field>
					<field name="res_model">customer.invoice.report</field>
					<field name="target">new</field>
					<field name="view_type">form</field>
					<field name="view_mode">form</field>
		</record>

		<menuitem id="menu_med_main_reports"
                  name="Reports"
                  sequence="5"/>
		<menuitem id="menu_reports_0" name="Reports" sequence="1" parent="menu_med_main_reports"/>
		<menuitem id="menu_reports_1"
                      name="Invoice Reports"
                      sequence="1" parent="menu_reports_0"/>
		<menuitem action="action_customer_invoice_report" id="menu_customer"
                              name="Customer Invoice Reports"
                              sequence="1" parent="menu_reports_1"/>



    </data>
</openerp>